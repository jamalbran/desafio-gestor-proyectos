<%= form_with(model: @project, local: true) do |f|%>
  <div class='form-group'>
    <%= f.label :name%>
    <%= f.text_field :name%>
  </div>
  <div class='form-group'>
    <%= f.label :description%>
    <%= f.text_field :description%>
  </div>
  <div class='form-group'>
    <%= f.label :state%>
    <%= f.select :state, options_for_select(Project.states.keys)%>
  </div>
  <div class='form-group'>
    <%= f.label :initial_date%>
    <%= f.date_field :initial_date%>
  </div>
  <div class='form-group'>
    <%= f.label :end_date%>
    <%= f.date_field :end_date%>
  </div>
  <%= f.submit 'Crear Proyecto', class: 'btn btn-success'%>
<% end %>